<%if(message.length!=0){%>
    <input type="hidden" id="message_length" value="<%message.length%>"/>
    <input type="hidden" id="message_id" value="<%=message[0].idx%>"/>
    <input type="hidden" id="message_content" value="<%=message[0].content%>"/>
<%}else{%>
    <input type="hidden" id="message_length" value="0"/>
    <input type="hidden" id="message_id" value="0"/>
    <input type="hidden" id="message_content" value="0"/>
<%}%>

<script type="text/javascript">

    var id = $('#message_id').val();
    var content = $('#message_content').val();
    var length = $('#message_length').val();
    window.onload = pageLoad;
    function pageLoad(){
        if(content!="0"){
            var result = confirm('관리자의 메시지: '+content);
            if(result){
                $.ajax({// 서버로 데이터 전송
                    url:'/main/message/update',
                    type:'post',
                    data:{idx: id},
                    success: function (data) {
                        var sign = JSON.parse(JSON.stringify(data));
                        sign = sign.data;

                        if (sign == "error") {
                            alert("메시지를 확인하지 않았습니다.");
                            window.location.reload();
                            return false;
                        } else {
                            alert("메시지를 확인했습니다.");
                            window.location.reload();
                            return true;
                        }
                    },
                    error: function (data) {
                    }
                })   //ajax
            }
        }
    }
</script>

