        <div class="col-lg-6" id="chart" style="width:100px; height:100px;">

            <script type="text/javascript">
                $(document).ready(function() {
                    var options = {
                        title:{
                            text:"월별 매출액",
                            align: 'center',
                            style: {
                                fontSize:  '18px',
                                fontWeight:  'bold'
                            },
                        },
                        series: [140000, 230000, 210000, 170000, 150000, 100000, 120000, 170000, 210000,0,50000,100000],
                        chart: {
                            type: 'polarArea'
                        },
                        stroke: {
                            colors: ['#fff']
                        },
                        fill: {
                            opacity: 0.8
                        },
                        responsive: [{
                            breakpoint: 480,
                            options: {
                                chart: {
                                    width: 200,
                                    height:200
                                },
                                legend: {
                                    position: 'bottom'
